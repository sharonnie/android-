<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/welcome_blue"
    tools:context="${relativePackage}.${activityClass}" >    
    
    <LinearLayout
        android:id="@+id/personalTabLayout"
        android:layout_width="fill_parent"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:background="@color/welcome_blue"
        android:layout_height="50.0dip" >

        <TextView
            android:id="@+id/students"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="@string/student"
            android:background="@drawable/tab_select"
            android:textColor="@color/welcome_blue"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/coachs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="@string/coach"
            android:background="@drawable/tab_unselect"
            android:textColor="@color/white"
            android:textSize="18.0dip" />
        
    </LinearLayout>
    
    <android.support.v4.view.ViewPager  
        android:id="@+id/personalViewpager"  
        android:layout_width="wrap_content"  
        android:layout_height="0dp"  
        android:layout_weight="1.0"
        android:background="#EFEEE8"
        android:layout_gravity="center" >         
    </android.support.v4.view.ViewPager> 
    
</LinearLayout>
